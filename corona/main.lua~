-- local variables for global use

local centerX = display.contentWidth / 2;
local centerY = display.contentHeight / 2;

local rightX   = display.contentWidth;
local bottomY  = display.contentHeight;

local scaleX = 8/5;
local scaleY = 4/3;


--This should be in a lua file called music.lua

local currentBackgroundMusic = "menu.mp3";
local onMusicFinished;
onMusicFinished = function(event)
  print( "sound play ended" )
  media.playSound( "menu.mp3", onMusicFinished )
end

--media.playSound( "menu.mp3", onMusicFinished )
media.playEventSound( "fortressGate.mp3" )

local bg = display.newImage( "mainmenuBg.png" )
bg.x = centerX;
bg.y = centerY;
bg:scale( scaleX , scaleY );

local logo = display.newImage( "logo.png" )
logo:scale( scaleX , scaleY );
logo.x = centerX
logo.y = 0;

transition.to( logo, { time=1000, y=display.contentHeight / 5 * 2  } )


local names = native.getFontNames();
for i,v in ipairs(names) do print(i,v) end

local text = display.newText( "New Game!", centerX, centerY, "AnonymousPro", 50 )
text:setReferencePoint( display.CenterReferencePoint )
text.x = centerX;
text.y = bottomY;
transition.to( text, { time=1000, y = centerY  } )


